  "paths": {
    "/v1/auth/{provider}/oauth": {
      "post": {
        "description": "auth with social networks",
        "produces": ["application/json"],
        "consumes": ["application/json"],
        "parameters": [
          {
            "in": "path",
            "name": "provider",
            "description": "Provider",
            "type": "string",
            "enum": ["facebook", "twitter"],
            "required": true
          },
          {
            "in": "formData",
            "name": "oauth_token",
            "description": "oAuth Token",
            "type": "string",
            "required": true
          },
          {
            "in": "formData",
            "name": "oauth_token_secret",
            "description": "twitter oAuth token secret",
            "type": "string",
            "required": false
          },
          {
            "in": "formData",
            "name": "test[test1]",
            "description": "test1",
            "type": "string",
            "required": false
          },
          {
            "in": "formData",
            "name": "test[test2]",
            "description": "test2",
            "type": "string",
            "required": false
          },
          {
            "in": "formData",
            "name": "referral_token",
            "description": "User referral token",
            "type": "string",
            "required": false
          },
          {
            "in": "header",
            "name": "X-User-Token",
            "description": "User JWT",
            "type": "string",
            "required": false
          }
        ],
        "responses": {
          "201": {
            "description": "auth with social networks",
            "schema": {
              "$ref": "#/definitions/Test::AuthSerializer"
            }
          }
        },
        "tags": ["v1"],
        "operationId": "postV1AuthProviderOauth"
      }
    },
    "/v1/offerings/{slug}": {
      "get": {
        "description": "Get Offering",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "path",
            "name": "slug",
            "description": "Offering Slug",
            "type": "string",
            "required": true
          },
          {
            "in": "query",
            "name": "include",
            "description": "perks, documents, location_restricted,\n                        tags, press, pitch_sections, faqs,\n                        risks, roles_team_members, questions,\n                        form_c, investment_reasons, investment_reasons.user including. Pass separated with `,` in any order",
            "type": "string",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "Get Offering",
            "schema": { "$ref": "#/definitions/OfferingSerializer" }
          }
        },
        "tags": ["v1"],
        "operationId": "getV1OfferingsSlug"
      }
    },
    "/v1/offerings/{offering_slug}/terms": {
      "patch": {
        "description": "Add or Update Custom Terms for Offering",
        "produces": [
          "application/json"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "header",
            "name": "X-User-Token",
            "description": "User JWT",
            "type": "string",
            "required": true
          },
          {
            "in": "header",
            "name": "X-Csrf-Token",
            "description": "CSRF Token",
            "type": "string",
            "required": false
          },
          {
            "in": "path",
            "name": "offering_slug",
            "description": "Offering`s slug",
            "type": "string",
            "required": true
          },
          {
            "name": "V1OfferingsOfferingSlugTerms",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/patchV1OfferingsOfferingSlugTerms"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Add or Update Custom Terms for Offering",
            "schema": {
              "$ref": "#/definitions/patchV1OfferingsOfferingSlugTerms"
            }
          }
        },
        "tags": [
          "v1"
        ],
        "operationId": "patchV1OfferingsOfferingSlugTerms"
      }
    }
  },
